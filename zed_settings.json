// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "colorize_brackets": true,
  "agent_servers": {
    "opencode": {
      "type": "extension",
      "default_model": "github-copilot/gpt-5"
    }
  },
  "use_autoclose": false,
  "use_auto_surround": true,
  "show_signature_help_after_edits": true,
  "debugger": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "default_width": 300.0,
    "dock": "right"
  },
  "terminal": {
    "dock": "right"
  },
  "when_closing_with_no_tabs": "keep_window_open",
  "file_finder": {
    "modal_max_width": "large"
  },
  "vertical_scroll_margin": 0.0,
  "tabs": {
    "close_position": "left",
    "show_close_button": "hover",
    "file_icons": false,
    "git_status": true
  },
  "relative_line_numbers": "enabled",
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    },
    "use_modifier_to_send": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "vim_mode": true,
  "vim": {
    "default_mode": "normal",
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "never"
  },
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "cursor_blink": false,
  "format_on_save": "off",
  // "scroll_beyond_last_line": "off",
  // Allow the cursor to reach the edges of the screen
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "buffer_font_family": "Hack Nerd Font Mono",
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark Hard"
  },
  "languages": {
    "PHP": {
      "language_servers": ["phpactor", "!intelephense", "..."],
      "formatter": {
        "external": {
          "command": "bunx",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "file_types": {
    "MDX": ["*.mdx"],
    "PHP": ["*.php"],
    "Blade": ["*blade.php"]
  }
}
